<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/detail_share_title"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:background="@color/colorUltraLight"
        android:fontFamily="@font/sfsemibold"
        android:gravity="center_vertical"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:text="@string/purcharse_email"
        android:textAllCaps="true"
        android:textColor="@color/colorDarkGray"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/detail_share_email_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detail_share_title">

        <EditText
            android:id="@+id/detail_share_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/sfregular"
            android:hint="@string/purcharse_email"
            android:inputType="textEmailAddress"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:textSize="16sp"
            android:theme="@style/EditTextLogin"
            android:visibility="visible" />

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/detail_share_product_title"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginTop="40dp"
        android:background="@color/colorUltraLight"
        android:fontFamily="@font/sfsemibold"
        android:gravity="center_vertical"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:text="@string/purcharse_ticket"
        android:textAllCaps="true"
        android:textColor="@color/colorDarkGray"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detail_share_email_layout" />

</android.support.constraint.ConstraintLayout>